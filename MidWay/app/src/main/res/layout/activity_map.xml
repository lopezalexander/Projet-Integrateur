<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:map="http://schemas.android.com/apk/res-auto">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        map:mapId="@string/mapId"
        tools:context=".MapsActivity" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:elevation="10dp"
        android:background="@color/blue3"
        android:id="@+id/relLayout1">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/ic_magnify"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_magnify_foreground"/>

        <EditText
            android:id="@+id/input_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ic_magnify"
            android:background="@null"
            android:hint="Enter Address, City or Zip Code"
            android:imeOptions="actionSearch"
            android:textColor="@color/blue1"
            android:textColorHint="@color/blue1"
            android:textFontWeight="700"
            android:textSize="17sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:elevation="10dp"
        android:background="@color/blue3"
        android:id="@+id/relLayout1">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/ic_add_location"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_add_location_foreground"/>

        <EditText
            android:id="@+id/input_search2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ic_add_location"
            android:background="@null"
            android:hint="Add a second address"
            android:imeOptions="actionSearch"
            android:textColor="@color/blue1"
            android:textColorHint="@color/blue1"
            android:textSize="17sp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/ic_expand"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-54dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="530dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_expand_foreground" />


    <ImageView
        android:id="@+id/ic_share"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-54dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="210dp"
        android:layout_toEndOf="@id/input_search2"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_share_foreground" />

    <ImageView
        android:id="@+id/ic_gps"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-54dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="170dp"
        android:layout_toEndOf="@id/input_search2"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_gps_foreground" />

    <ImageView
        android:id="@+id/ic_perso"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-54dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="130dp"
        android:layout_toStartOf="@id/ic_gps"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_perso_foreground" />

    <ImageView
        android:id="@+id/ic_settings"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-54dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="90dp"
        android:layout_toStartOf="@id/ic_gps"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_settings_foreground" />


</RelativeLayout>