<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="2sp"
        android:background="@drawable/list_item_border">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/listviewItem_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:background="@drawable/list_item_component_border"
                android:src="@drawable/ic_restaurant_foreground"
                android:scaleType="centerCrop" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:background="@drawable/list_item_component_border"
                >

                <TextView
                    android:id="@+id/listviewItem_name"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:background="@drawable/list_item_component_border"
                    android:paddingStart="8dp"
                    android:text="El Habanero Mexican Grill"
                    android:textColor="@color/blue5"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/listviewItem_address"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:background="@drawable/list_item_component_border"
                    android:paddingStart="5dp"
                    android:text="1325 Sainte-Catherine W"
                    android:textColor="@color/blue5"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/list_item_component_border">

                <TextView
                    android:id="@+id/listviewItem_rating"
                    android:layout_width="45dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:text="4.3â˜…"
                    android:textColor="@color/blue5"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="56dp"
                    android:layout_height="60dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/listviewItem_share"
                        android:layout_width="38dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_share_foreground"/>

                    <ImageView
                        android:id="@+id/listviewItem_chooseDestination"
                        android:layout_width="38dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_go_foreground"/>

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>